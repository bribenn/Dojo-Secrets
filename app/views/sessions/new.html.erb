<div class="container-fluid hero login">
	<div class="header">
		<h1>Login</h1>
		<p class="errors"> <%= flash[:login_error] %> </p>
	</div>
	<form action='/sessions' method="post">
	  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	  <div class="form-group">
	    <label for="email">Email address:</label>
	    <input type="email" class="form-control" name="login[email]" id="email">
	  </div>
	  <div class="form-group">
	    <label for="pwd">Password:</label>
	    <input type="password" class="form-control" name="login[password]" id="pwd">
	  </div>
	  <input type="submit" class="btn btn-default" value="login">
	</form>
	<a href="/"><button type="button" class="btn btn-basic">Cancel</button></a>

</div>
